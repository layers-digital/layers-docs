  "responseSchema": {
    "title": "@layers:education:AcademicRecords:getRelated",
    "type": "object",
    "required": [
      "result"
    ],
    "properties": {
      "result": {
        "type": "array",
        "items": {
          "type": "object",
          "required": [
            "student",
            "course",
            "records"
          ],
          "properties": {
            "id": {
              "type": "string",
              "description": "ID interno do grupo de registros",
              "required": false,
              "example": "RA"
            },
            "season": {
              "type": "string",
              "description": "Período letivo",
              "required": false,
              "example": "2019"
            },
            "student": {
              "type": "string",
              "description": "Título do grupo de registros",
              "required": true,
              "example": "Matília Castelli"
            },
            "course": {
              "type": "string",
              "description": "Descrição do grupo de registros",
              "required": true,
              "example": "9º Ano - Ensino Fundamental"
            },
            "records": {
              "type": "array",
              "items": {
                "type": "object",
                "required": [
                  "createdAt",
                  "category",
                  "caption",
                  "description"
                ],
                "properties": {
                  "id": {
                    "type": "string",
                    "description": "ID interno do registro no ERP para possível integração de duas vias",
                    "required": false,
                    "example": "ID_DO_REGISTRO"
                  },
                  "createdAt": {
                    "type": "string",
                    "format": "date-time",
                    "description": "Data do envio do registro",
                    "required": true
                  },
                  "category": {
                    "type": "string",
                    "description": "Categoria do registro. Usaada para filtrar os registros",
                    "required": true,
                    "example": "Notificado por comparecer sem marterial escolar"
                  },
                  "caption": {
                    "type": "string",
                    "description": "Registro",
                    "required": true,
                    "exmaple": "Geografia"
                  },
                  "description": {
                    "type": "string",
                    "description": "Descrição do registro em markdown",
                    "required": true,
                    "example": "Não trouxe o material didático de Geografia"
                  },
                  "viewedAt": {
                    "type": "string",
                    "format": "date-time",
                    "description": "Data na qual o registro foi marcado como visto. Se o registro ainda não tiver sido visto o valor será null",
                    "required": false,
                    "default": null
                  },
                  "viewedBy": {
                    "type": "string",
                    "description": "Quem marcou o registro como visto. Se ninguém tiver visualizado o registro ainda o valor será `null`",
                    "required": false,
                    "default": null
                  },
                  "metadata": {
                    "type": "array",
                    "required": false,
                    "description": "Dados adicionais que podem ser vistos pelo usuário",
                    "items": {
                      "type": "object",
                      "properties": {
                        "label": {
                          "type": "string",
                          "description": "Título da informação",
                          "required": true,
                          "example": "Enviado por"
                        },
                        "value": {
                          "type": "string",
                          "description": "Valor da informação",
                          "required": true,
                          "example": "Vânia Almeida"
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
