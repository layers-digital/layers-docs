  "responseSchema": {
    "title": "@layers:education:Timetables:getRelated",
    "type": "object",
    "properties": {
      "results": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "id": {
              "type": "string",
              "description": "ID interno da grade horária",
              "required": false,
              "example": "0001"
            },
            "season": {
              "type": "string",
              "description": "Período letivo",
              "required": false,
              "example": "2019"
            },
            "student": {
              "type": "string",
              "description": "Nome do estudante",
              "required": true,
              "example": "Ivan Seidel Gomes"
            },
            "course": {
              "type": "string",
              "description": "Nome do curso ou série",
              "required": false,
              "example": "9º Ano"
            },
            "startWeekday": {
              "type": "string",
              "enum": [
                "monday",
                "tuesday",
                "wednesday",
                "thursday",
                "friday",
                "saturday",
                "sunday"
              ],
              "description": "Dia em que começa a semana letiva",
              "required": false,
              "example": "monday"
            },
            "schedules": {
              "type": "array",
              "description": "Lista de grades horárias",
              "required": true,
              "items": {
                "type": "object",
                "properties": {
                  "title": {
                    "type": "string",
                    "description": "Título da grade horária (atividade, disciplina, etc)",
                    "required": true,
                    "example": "Língua Portuguesa e os estudos"
                  },
                  "abbr": {
                    "type": "string",
                    "description": "Abreviação do título",
                    "required": false,
                    "example": "PORT"
                  },
                  "label": {
                    "type": "string",
                    "description": "Etiqueta do horário",
                    "required": false,
                    "example": "Extracurricular"
                  },
                  "weekDay": {
                    "type": "string",
                    "enum": [
                      "monday",
                      "tuesday",
                      "wednesday",
                      "thursday",
                      "friday",
                      "saturday",
                      "sunday"
                    ],
                    "description": "Dia da semana em que o horário é vigente",
                    "required": false,
                    "example": "monday"
                  },
                  "startTime": {
                    "type": "string",
                    "description": "Horário de início no formato (HH:MM:SS)",
                    "required": true,
                    "example": "15:30:00"
                  },
                  "endTime": {
                    "type": "string",
                    "description": "Horário de fim no formato (HH:MM:SS)",
                    "required": false,
                    "example": "16:30:00"
                  },
                  "location": {
                    "type": "string",
                    "description": "Localização do horário",
                    "required": false,
                    "example": "Campus SP, sala 12, bloco B"
                  },
                  "caption": {
                    "type": "string",
                    "description": "Subtítulo do horário",
                    "required": false,
                    "example": "Prof(a): Ana Maria"
                  }
                }
              }
            }
          }
        }
      }
    }
