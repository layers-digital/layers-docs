  "responseSchema": {
    "title": "LayersPaymentsPayablesGetRelatedResponse",
    "type": "object",
    "required": [
      "result"
    ],
    "properties": {
      "result": {
        "type": "array",
        "items": {
          "type": "object",
          "required": [
            "id",
            "title",
            "payables"
          ],
          "properties": {
            "id": {
              "type": "string",
              "description": "ID interno do grupo de cobranças",
              "example": "0001"
            },
            "title": {
              "type": "string",
              "description": "Título do grupo de cobranças. Aparecerá como nome do grupo",
              "example": "Marco Aurélio"
            },
            "description": {
              "type": "string",
              "description": "Descrição do grupo de cobranças. Aceita cobrança de llinhas",
              "example": "Responsável financeiro"
            },
            "installments": {
              "type": "number",
              "description": "Número total de parcelas. Por padrão será igual ao número de payables",
              "example": 12
            },
            "customer": {
              "type": "object",
              "description": "Informações de quem irá pagar as cobranças",
              "required": [
                "name"
              ],
              "properties": {
                "document": {
                  "type": "object",
                  "required": [
                    "kind",
                    "value"
                  ],
                  "properties": {
                    "kind": {
                      "type": "string",
                      "enum": [
                        "cpf",
                        "cnpj"
                      ],
                      "description": "Tipo do documento do pagador",
                      "example": "cpf"
                    },
                    "value": {
                      "type": "string",
                      "description": "Número do documento",
                      "example": "111.111.111-11"
                    }
                  }
                },
                "name": {
                  "type": "string",
                  "description": "Nome do pagador",
                  "example": "Felipe Layers"
                },
                "email": {
                  "type": "string",
                  "format": "email",
                  "description": "E-mail do pagador",
                  "example": "email@layers.education"
                },
                "phone": {
                  "type": "string",
                  "description": "Telefone do pagador",
                  "example": "(11)99999-9999"
                },
                "birth": {
                  "type": "string",
                  "format": "date",
                  "description": "Data de nascimento do pagador"
                }
              }
            },
            "payables": {
              "type": "array",
              "description": "Lista de cobranças que fazem parte desse grupo de cobranças",
              "items": {
                "type": "object",
                "required": [
                  "id",
                  "alias",
                  "installment",
                  "status",
                  "dueAt",
                  "centsPaid",
                  "centsTotal",
                  "centsOriginal",
                  "boleto"
                ],
                "properties": {
                  "id": {
                    "type": "string",
                    "description": "ID interno da cobrança",
                    "example": "0002"
                  },
                  "alias": {
                    "type": "string",
                    "description": "Identificador personalizado da cobrança. Será visível na interface",
                    "example": "3213"
                  },
                  "installment": {
                    "type": "number",
                    "description": "Número da parcela dessa cobrança",
                    "example": 1
                  },
                  "description": {
                    "type": "string",
                    "description": "Descrição da cobrança em markdown",
                    "example": "Mensalidade referente ao mês de Janeiro de 2020"
                  },
                  "status": {
                    "type": "string",
                    "enum": [
                      "paid",
                      "partially_paid",
                      "pending",
                      "open",
                      "canceled",
                      "late"
                    ],
                    "description": "Status dessa cobrança",
                    "example": "pending"
                  },
                  "dueAt": {
                    "type": "string",
                    "format": "date",
                    "description": "Data de vencimento da cobrança"
                  },
                  "paidAt": {
                    "type": "string",
                    "format": "date",
                    "description": "Data de pagamento da cobrança"
                  },
                  "sentAt": {
                    "type": "string",
                    "format": "date",
                    "description": "Data de envio da cobrança"
                  },
                  "centsPaid": {
                    "type": "number",
                    "format": "integer",
                    "description": "Quantia que foi paga em centavos",
                    "example": 0
                  },
                  "centsTotal": {
                    "type": "number",
                    "format": "integer",
                    "description": "Quantia a ser paga em centavos (com multas e taxas, se aplicável)",
                    "example": 150000
                  },
                  "centsOriginal": {
                    "type": "number",
                    "format": "integer",
                    "description": "Valor original (sem multas e taxas, se aplicável)",
                    "example": 150000
                  },
                  "boleto": {
                    "type": "object",
                    "description": "Arquivo e código do boleto",
                    "required": [
                      "link",
                      "code",
                      "type"
                    ],
                    "properties": {
                      "link": {
                        "type": "string",
                        "description": "URL de download do boleto. Obrigatoriamente uma url HTTPS",
                        "example": "https://boleto.pdf"
                      },
                      "code": {
                        "type": "string",
                        "description": "Linha digitável do boleto, será usada para o usuário copiar o código sem ter que baixar o boleto",
                        "example": "12341234123412341234"
                      },
                      "type": {
                        "type": "string",
                        "description": "Indica se a URL é de um arquivo ou de uma página web.",
                        "example": "link",
                        "enum": [
                          "link",
                          "file"
                        ]
                      }
                    }
                  },
                  "attachments": {
                    "type": "array",
                    "description": "Lista de anexos da cobrança",
                    "items": {
                      "type": "object",
                      "required": [
                        "kind",
                        "title",
                        "url"
                      ],
                      "properties": {
                        "kind": {
                          "type": "string",
                          "enum": [
                            "invoice",
                            "file"
                          ],
                          "description": "Tipo do anexo. Pode ser nota fiscal (invoice) ou um arquivo (file)",
                          "example": "file"
                        },
                        "title": {
                          "type": "string",
                          "description": "Nome do arquivo",
                          "example": "Comprovante de estorno"
                        },
                        "description": {
                          "type": "string",
                          "description": "Descrição do anexo",
                          "example": "Estorno realizado em 31/10/2019"
                        },
                        "url": {
                          "type": "string",
                          "description": "Link para baixar o anexo. Obrigatoriamente uma url HTTPS",
                          "example": "https://url.para-download.com"
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
