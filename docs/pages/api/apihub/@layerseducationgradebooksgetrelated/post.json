  "responseSchema": {
    "title": "@layers:education:GradeBooks:getRelated",
    "type": "object",
    "required": [
      "result"
    ],
    "properties": {
      "result": {
        "type": "array",
        "items": {
          "type": "object",
          "required": [
            "student",
            "course",
            "status",
            "terms"
          ],
          "properties": {
            "id": {
              "type": "string",
              "description": "ID interno do grupo do livro de notas",
              "required": false,
              "example": "0001"
            },
            "season": {
              "type": "string",
              "description": "Período letivo",
              "required": false,
              "example": "2019"
            },
            "student": {
              "type": "string",
              "description": "Nome do estudante",
              "required": true,
              "example": "Ivan Seidel Gomes"
            },
            "course": {
              "type": "string",
              "description": "Nome do curso ou série",
              "required": true,
              "example": "9º Ano"
            },
            "status": {
              "type": "string",
              "enum": [
                "current",
                "ended"
              ],
              "description": "Status desse livro de notas. Pode ser atual (current) ou de um período passado (ended)",
              "required": true,
              "example": "curren"
            },
            "terms": {
              "type": "array",
              "description": "Lista de livros de notas para cada período do ano letivo",
              "required": true,
              "items": {
                "type": "object",
                "properties": {
                  "label": {
                    "type": "string",
                    "description": "Título do período letivo",
                    "required": true,
                    "example": "Primeiro Bimestre"
                  },
                  "startsAt": {
                    "type": "string",
                    "format": "date",
                    "description": "Data de início do período",
                    "required": true
                  },
                  "endsAt": {
                    "type": "string",
                    "format": "date",
                    "description": "Data de fim do período",
                    "required": true
                  },
                  "status": {
                    "type": "string",
                    "enum": [
                      "unknown",
                      "scheduled",
                      "current",
                      "ended"
                    ],
                    "description": "Status do período letivo",
                    "required": true,
                    "example": "current"
                  },
                  "subjects": {
                    "type": "array",
                    "description": "Lista de notas das disciplinas",
                    "required": false,
                    "items": {
                      "type": "object",
                      "properties": {
                        "label": {
                          "type": "string",
                          "description": "Título da disciplina",
                          "required": true,
                          "example": "Português"
                        },
                        "abbr": {
                          "type": "string",
                          "description": "Abreviação da disciplina",
                          "required": false,
                          "example": "PORT"
                        },
                        "activities": {
                          "type": "array",
                          "description": "Lista de atividades",
                          "required": false,
                          "items": {
                            "type": "object",
                            "properties": {
                              "category": {
                                "type": "string",
                                "description": "Categoria da atividade",
                                "required": false,
                                "example": "Provas"
                              },
                              "label": {
                                "type": "string",
                                "description": "Nome da atividade",
                                "required": true,
                                "example": "Prova 1"
                              },
                              "description": {
                                "type": "string",
                                "description": "Descrição da atividade",
                                "required": false,
                                "example": "Verbos e substantivos"
                              },
                              "date": {
                                "type": "string",
                                "format": "date",
                                "description": "Data da atividade",
                                "required": false
                              },
                              "comment": {
                                "type": "string",
                                "description": "Comentário na atividade",
                                "required": false,
                                "example": "O aluno deve estudar mais o infinitivo"
                              },
                              "scoreGiven": {
                                "type": [
                                  "number",
                                  "string",
                                  null
                                ],
                                "description": "Nota da atividade",
                                "required": true,
                                "example": 6.5
                              },
                              "scoreMaximum": {
                                "type": [
                                  "number",
                                  "string"
                                ],
                                "description": "Pontuação máxima na atividade",
                                "required": false,
                                "example": 10
                              },
                              "scoreMood": {
                                "type": "string",
                                "enum": [
                                  "bad",
                                  "neutral",
                                  "good"
                                ],
                                "description": "Indica se a nota é boa (nota azul), neutra (opcional) ou ruim (nota vermelha)",
                                "required": false,
                                "example": "good"
                              },
                              "scoreDate": {
                                "type": "string",
                                "format": "date",
                                "description": "Data na qual foi lançada a nota",
                                "required": false
                              }
                            }
                          }
                        },
                        "overall": {
                          "type": "array",
                          "description": "Lista de resultados gerais",
                          "required": false,
                          "items": {
                            "type": "object",
                            "properties": {
                              "type": {
                                "type": "string",
                                "enum": [
                                  "attendance",
                                  "partial_grade",
                                  "final_grade",
                                  "other"
                                ],
                                "description": "Tipo do resultado",
                                "required": true,
                                "example": "attendance"
                              },
                              "label": {
                                "type": "string",
                                "description": "Título do resultado",
                                "required": true,
                                "example": "Faltas"
                              },
                              "scoreGiven": {
                                "type": [
                                  "number",
                                  "string",
                                  null
                                ],
                                "description": "Nota que o aluno recebeu neste resultado",
                                "required": true,
                                "example": "90%"
                              },
                              "scoreMaximum": {
                                "type": [
                                  "number",
                                  "string",
                                  null
                                ],
                                "description": "Nota máxima nessa atividade",
                                "required": true,
                                "example": "100%"
                              },
                              "scoreMood": {
                                "type": "string",
                                "enum": [
                                  "bad",
                                  "neutral",
                                  "good"
                                ],
                                "description": "Indica se a nota é boa (nota azul), neutra (opcional) ou ruim (nota vermelha)",
                                "required": false,
                                "example": "good"
                              },
                              "featured": {
                                "type": "boolean",
                                "description": "Indica se o resultado é o mais importante",
                                "required": false,
                                "example": true
                              }
                            }
                          }
                        },
                        "categories": {
                          "type": "array",
                          "description": "Lista de categorias",
                          "required": false,
                          "items": {
                            "type": "object",
                            "properties": {
                              "name": {
                                "type": "string",
                                "description": "Nome da categoria utilizado nas atividades",
                                "required": true,
                                "example": "Provas"
                              },
                              "description": {
                                "type": "string",
                                "description": "Descrição adicional da categoria",
                                "required": false,
                                "example": "Provas discussivas e/ou objetivas com intuito de avaliar o aprendizado"
                              },
                              "order": {
                                "type": "number",
                                "format": "integer",
                                "description": "Posição na ordenação (aparecerá em ordem crescente)",
                                "required": false,
                                "example": 1
                              }
                            }
                          }
                        }
                      }
                    }
                  }
                }
              }
            },
            "attachments": {
              "type": "array",
              "description": "Lista de anexos desse livro de notas",
              "required": false,
              "items": {
                "type": "object",
                "required": [
                  "title",
                  "type",
                  "url"
                ],
                "properties": {
                  "title": {
                    "type": "string",
                    "description": "Título do anexo",
                    "required": true,
                    "example": "CalculoDeNotas.pdf"
                  },
                  "type": {
                    "type": "string",
                    "enum": [
                      "file",
                      "link",
                      "image"
                    ],
                    "description": "Tipo do anexo",
                    "required": true,
                    "example": "file"
                  },
                  "url": {
                    "type": "string",
                    "description": "URL para fazer download do anexo",
                    "required": true,
                    "example": "https://calculo.pdf"
                  }
                }
              }
            }
          }
        }
      }
    }
